<UserControl x:Class="Sales_Dashboard.UserControls.Legends"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Name="legends">
    
    <StackPanel Orientation="Horizontal">
        <Border Width="12" Height="12" Background="#FF81E098" CornerRadius="3"  />
        <TextBlock Text="{Binding ElementName=legends,Path=FirstMonth}" VerticalAlignment="Center" Margin="7 0 20 0" Foreground="Black"/>

        <Border Width="12" Height="12" Background="#FFE49762" CornerRadius="3"  />
        <TextBlock Text="{Binding ElementName=legends,Path=SecondMonth}" VerticalAlignment="Center" Margin="7 0 20 0" Foreground="Black"/>

        <Border Width="12" Height="12" Background="#FFBFF9A0" CornerRadius="3"  />
        <TextBlock Text="{Binding ElementName=legends,Path=ThirdMonth}" VerticalAlignment="Center" Margin="7 0 0 0" Foreground="Black"/>
    </StackPanel>
</UserControl>